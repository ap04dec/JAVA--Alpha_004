//wap to make a simple calculator for the arithmatic operations like +.*.- using switch statements
import java.util.*;
class arithmatic
{public void add(int a,int b)
{

System.out.println("result of given input :"+ a+b);
}
public void subs(int a,int b)
{//int sub =a-b;
System.out.println("result of given input :"+ (a-b));
}
 public void  div(int a,int b)
{
System.out.println("result of given input :"+ a/b);
}

public void  multiplication(int a,int b)
{
System.out.println("result of given input :"+ a*b);}

}

public class calculator 
{
public static void main(String args[])
{
Scanner sc = new Scanner (System.in);
System.out.print("enter the first number =");
int a =sc.nextInt();
System.out.print("enter the second number =");
int b =sc.nextInt();
arithmatic obj = new arithmatic();
int choice;
System.out.println("***************choice to press the number for operation************");
System.out.println("1 for addition");
System.out.println("2 for substraction");
System.out.println("3 for divion");
System.out.println("4 for multiplication");
System.out.print("enter the choice =");
choice=sc.nextInt();

   switch (choice)
{ case 1:
 obj.add(a,b);
break;
case 2:
 obj.subs(a,b);
break;
case 3 :
 obj.div(a,b);
break;
case 4:
 obj.multiplication(a,b);
}
}

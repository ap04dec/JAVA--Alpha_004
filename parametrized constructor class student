import java.util.Scanner;

// define a class  student with data members string name int age  and float cgpa and member method 
//showdata method for displaying output respectively define the parametrized constructor to intialize
// the data member through user input.
// intialize object of this class and acess the member methods implement this scenario in java     
public class student { 
                    int age; 
                    String name;
                    float cgpa;
                    student()
                    {}
                    student(int age, String name , float cgpa )
                    {
                                        this.age=age;
                                        this.name=name;
                                        this.cgpa=cgpa;
                                        System.out.println("age = "+ age );
                                        System.out.println("Name = "+ name ); 
                                        System.out.println("cgpa = "+cgpa);

                    }
                    public static void main(String args[])
                    { 
                        Scanner sc= new Scanner(System.in);    
                        System.out.println("enter the value of age =");
                     int p =sc.nextInt();   
                     System.out.println("enter the Name of person =");
                     String q =sc.next();
                     System.out.println("enter the cgpa =");
                     float r =sc.nextFloat(); 
                     student obj = new student();       
                     student obj1= new student ( p,  q, r);
                    }
                    
                    
}

//to read the value in array using function and display the resultof the addition of array elements.
import java.util.Scanner;
public class add_array_using_function {
                    int sum=0;
                    Scanner s = new Scanner(System.in);
                    void array(){ int n;
                                      
                                        System.out.println("Enter the number of elements : ");                                                                                                  
                                        n = s.nextInt();
                                        int a[] = new int[n];
                                        System.out.println("Enter the elements :");
                                        for(int i = 0; i < n; i++)
                                        {
                                        a[i] = s.nextInt();
sum=sum+a[i];
                                        }
                                        System.out.println("addition of the array elements" + sum);

                                        /*for ( int i =0;i<n;i++)
                                        {
                                           int sum  = 0;
                                           sum = sum+a[i];               
                                        }*/

                    }
                    public static void main(String args[])
                    {
                   add_array_using_function ob= new add_array_using_function();

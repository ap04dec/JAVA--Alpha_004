import java.util.Scanner;
public class addition {
                    public static void main(String args[]){
                                        Scanner sc=new Scanner(System.in);
                                        int x,y,s;
                                        System.out.println("emter the value of 1st number =");
                                        x=sc.nextInt();
                                        System.out.println("emter the value of 2nd number =");
                                        y=sc.nextInt();
                                        s=x+y;
                                        System.out.println("the result of addition is = " + s );

                    }

                    
}
